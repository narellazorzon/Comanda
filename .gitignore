# =====================================================
# Sistema de Gestión de Comandas - .gitignore
# =====================================================

# Dependencias de Composer
/vendor/
composer.lock

# Archivos de configuración local
src/config/database.local.php
.env
.env.local

# Logs y archivos temporales
/logs/
*.log
error_log
access_log
/tmp/
/temp/
/cache/

# Archivos del sistema operativo
.DS_Store
Thumbs.db
desktop.ini
.Spotlight-V100
.Trashes

# IDEs y editores
.vscode/
.idea/
*.sublime-project
*.sublime-workspace
*.swp
*.swo
*~
.project
.settings/
nbproject/

# Archivos de respaldo
*.bak
*.backup
*.old
*.orig
*.~*

# Archivos de base de datos locales
*.sql.gz
*.sql.zip
database/backup/
database/migrations/local/

# Archivos subidos por usuarios (si aplica)
public/uploads/
public/assets/uploads/

# Archivos de testing
test_*.php
tests/coverage/
phpunit.xml
.phpunit.result.cache

# Archivos de documentación local
docs/local/
*.todo
TODO.md
REPORTE_*.md

# Node modules (si se usa algún bundler)
node_modules/
package-lock.json
yarn.lock

# Archivos de construcción
/build/
/dist/

# Archivos de configuración de servidor local
.htaccess.local
apache.conf
nginx.conf

# Archivos de sesión PHP
sess_*

# Archivos específicos del proyecto que no deben versionarse
database/*.local.sql
src/config/app.local.php

# Ignorar archivos de desarrollo/debug
debug_*.php
fix_*.php
test_*.sql
add_*.sql
update_*.sql
create_*.php
check_*.php
quick_*.php
SISTEMA_*.md
DEPLOYMENT_CHECKLIST.md
